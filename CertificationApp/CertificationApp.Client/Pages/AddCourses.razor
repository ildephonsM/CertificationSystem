@page "/add-course"
@using CertificationApp.Shared.Models
@inject HttpClient Http
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Add Course</PageTitle>

<div class="container-fluid">
    <div class="main-container">
        <div class="content-area">
            <NavLink href="/" class="back-btn" Match="NavLinkMatch.All">
                <i class="fas fa-arrow-left"></i> Back to Home
            </NavLink>

            <div class="form-container">
                <h2><i class="fas fa-book"></i> Add New Course</h2>
                <p class="text-muted mb-4">Enter the details for the new course</p>

                <EditForm Model="NewCourse" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="form-group">
                        <label class="form-label">Course Name *</label>
                        <InputText @bind-Value="NewCourse.CourseName" class="form-control" placeholder="Enter course name" />
                        <ValidationMessage For="@(() => NewCourse.CourseName)" class="text-danger" />
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <i class="fas fa-spinner fa-spin"></i>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <i class="fas fa-save"></i>
                                <span>Add Course</span>
                            }
                        </button>

                        <button type="button" class="btn btn-outline-secondary ms-3" @onclick="ResetForm">
                            <i class="fas fa-undo"></i> Reset Form
                        </button>
                    </div>
                </EditForm>

                @if (showSuccessMessage)
                {
                    <div class="alert alert-success mt-3 alert-dismissible fade show">
                        <i class="fas fa-check-circle"></i> Course added successfully!
                        <button type="button" class="btn-close" @onclick="() => showSuccessMessage = false"></button>
                    </div>
                }

                @if (showErrorMessage)
                {
                    <div class="alert alert-danger mt-3 alert-dismissible fade show">
                        <i class="fas fa-exclamation-circle"></i> @errorMessage
                        <button type="button" class="btn-close" @onclick="() => showErrorMessage = false"></button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

